<% content_for :subtitle do %>
  マイページ
<% end %>

  <main>
    <div class="user-info">
      <h2><%= current_user.name %> さん</h2>
    </div>

    <div class="students-list">
      <h3>生徒名</h3>
      <ul>
        <% @students&.each do |student| %>
          <li>
            <%= student.name %>（残ポイント：<%# <%= student.points %>）
          </li>
        <% end %>
      </ul>
    </div>

    <div class="actions">
      <%= link_to "ポイント履歴", "#", class: "btn btn-primary" %>
      <%= link_to "商品交換申請", "#", class: "btn btn-primary" %>
    </div>
  </main>
</body>
</html>
